<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.berufsbildungscenter.leagueofstats.FindSummonerActivity">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:id="@+id/profileRadioButton"
        android:layout_marginTop="129dp"
        android:checked="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In Game"
        android:id="@+id/inGameRadioButton"
        android:checked="false"
        android:layout_alignTop="@+id/profileRadioButton"
        android:layout_alignStart="@+id/FindSummonerTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/findSummonerTextField"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:hint="Find Summoners" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/searchSummonerButton"
        android:layout_alignBottom="@+id/findSummonerTextField"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regionSpinner"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/inGameRadioButton"
        android:layout_toEndOf="@+id/findSummonerTextField"
        android:layout_alignBottom="@+id/inGameRadioButton"
        android:layout_alignStart="@+id/searchSummonerButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Find Summoner"
        android:id="@+id/FindSummonerTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

</RelativeLayout>
