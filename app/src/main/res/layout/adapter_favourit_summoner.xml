<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.berufsbildungscenter.leagueofstats.FavoritSummonerAdapter"
    android:id="@+id/favoritSummonerItem">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/summonerImageView"
        android:src="@drawable/standard_120px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Summoner"
        android:id="@+id/summoner"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/summonerImageView"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Level: "
        android:id="@+id/levelTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wins: "
        android:id="@+id/winsTitle"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/levelTitle"
        android:layout_alignStart="@+id/levelTitle"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/level"
        android:layout_alignTop="@+id/levelTitle"
        android:layout_marginRight="30dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/wins"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/winsTitle"
        android:layout_alignStart="@+id/level"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
