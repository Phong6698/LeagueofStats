<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="ch.berufsbildungscenter.leagueofstats.FavoritSummonerAdapter"
    android:id="@+id/favoritSummonerItem"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:gravity="top">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/summonerImageView"
        android:src="@drawable/standard_120px"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Level:"
        android:id="@+id/levelTitle"
        android:layout_marginRight="50dp"
        android:layout_alignTop="@+id/summonerImageView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Wins:"
        android:id="@+id/winsTitle"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/level"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/level"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/levelTitle"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/wins"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/winsTitle"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Summoner"
        android:id="@+id/summoner"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/summonerImageView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp" />

</RelativeLayout>
