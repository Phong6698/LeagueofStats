<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.berufsbildungscenter.leagueofstats.FreeToPlayChampionsAdapter"
    android:id="@+id/freeToPlayChampItem">>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/championIcon"
        android:src="@drawable/standard_120px"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/difficultyTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Champion"
        android:id="@+id/champion"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/championIcon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Attack:"
        android:id="@+id/attackTitle"
        android:layout_marginStart="46dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/champion"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Magic:"
        android:id="@+id/magicTitle"
        android:layout_below="@+id/attackTitle"
        android:layout_alignStart="@+id/attackTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Defense:"
        android:id="@+id/defenseTitle"
        android:layout_below="@+id/magicTitle"
        android:layout_alignStart="@+id/magicTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Difficulty:"
        android:id="@+id/difficultyTitle"
        android:layout_below="@+id/defenseTitle"
        android:layout_alignStart="@+id/defenseTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/attack"
        android:layout_above="@+id/magicTitle"
        android:layout_toEndOf="@+id/difficultyTitle"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/magic"
        android:layout_alignTop="@+id/magicTitle"
        android:layout_alignStart="@+id/attack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/defense"
        android:layout_above="@+id/difficultyTitle"
        android:layout_alignStart="@+id/magic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/difficulty"
        android:layout_alignTop="@+id/difficultyTitle"
        android:layout_alignStart="@+id/defense" />
</RelativeLayout>
