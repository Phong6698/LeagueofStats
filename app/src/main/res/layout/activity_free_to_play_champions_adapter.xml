<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.berufsbildungscenter.leagueofstats.FreeToPlayChampionsAdapter"
    android:id="@+id/freeToPlayChampItem"
    android:clickable="true"
    android:gravity="center_vertical">>

    <ImageView
        android:layout_width="120px"
        android:layout_height="120px"
        android:id="@+id/championIcon"
        android:src="@drawable/standard_120px"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Champion"
        android:id="@+id/champion"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/championIcon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Attack:"
        android:id="@+id/attackTitle"
        android:layout_alignTop="@+id/championIcon"
        android:layout_alignStart="@+id/deifficultyTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Magic:"
        android:id="@+id/magicTitle"
        android:layout_alignStart="@+id/attackTitle"
        android:layout_below="@+id/attackTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Defense:"
        android:id="@+id/defenseTitle"
        android:layout_below="@+id/magicTitle"
        android:layout_alignStart="@+id/deifficultyTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Difficulty:"
        android:id="@+id/deifficultyTitle"
        android:layout_below="@+id/defenseTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/attack"
        android:layout_marginRight="80dp"
        android:layout_alignTop="@+id/attackTitle"
        android:layout_alignStart="@+id/attackTitle"
        android:layout_marginStart="68dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/magic"
        android:layout_marginRight="80dp"
        android:layout_below="@+id/attack"
        android:layout_alignStart="@+id/attack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/defense"
        android:layout_marginRight="80dp"
        android:layout_below="@+id/magic"
        android:layout_alignStart="@+id/magic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/difficulty"
        android:layout_marginRight="80dp"
        android:layout_below="@+id/defense"
        android:layout_alignStart="@+id/defense" />

</RelativeLayout>