<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.berufsbildungscenter.leagueofstats.RankedAdapter"
    android:id="@+id/rankedItem">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/rankedImage"
        android:src="@drawable/provisional"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ranked"
        android:id="@+id/rankedTextView"
        android:layout_below="@+id/queueTextView"
        android:layout_alignStart="@+id/queueTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LP"
        android:id="@+id/leaguePointsTextView"
        android:layout_below="@+id/rankedTextView"
        android:layout_alignStart="@+id/rankedTextView"
        android:layout_alignEnd="@+id/rankedTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Queue"
        android:id="@+id/queueTextView"
        android:layout_alignTop="@+id/rankedImage"
        android:layout_toEndOf="@+id/rankedImage"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wins: "
        android:id="@+id/winsTitle"
        android:layout_below="@+id/leaguePointsTextView"
        android:layout_alignStart="@+id/leaguePointsTextView"
        android:layout_alignEnd="@+id/leaguePointsTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Losses:"
        android:id="@+id/lossesTitle"
        android:layout_below="@+id/winsTitle"
        android:layout_alignStart="@+id/winsTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/winsTextView"
        android:layout_alignTop="@+id/winsTitle"
        android:layout_toEndOf="@+id/lossesTitle"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/textView"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/lossesTitle"
        android:layout_toEndOf="@+id/lossesTitle" />

</RelativeLayout>
